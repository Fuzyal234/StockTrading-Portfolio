    "@typescript-eslint/parser": "^8.17.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.16.0",
    "nodemon": "^3.1.7",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/**"
    ],
    "ext": "ts,json",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "node --require ts-node/register -r tsconfig-paths/register"
    }
  }
