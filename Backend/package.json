{
  "name": "stocktrading-backend",
  "version": "1.0.0",
  "description": "Backend for Stock Trading Portfolio Application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "keywords": [
    "stock-trading",
    "portfolio-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/jwt": "^7.2.4",
    "@prisma/client": "^5.9.1",
    "@sinclair/typebox": "^0.34.30",
    "argon2": "^0.41.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "fastify": "^4.25.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src/**"
    ],
    "ext": "ts,json",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "node --require ts-node/register -r tsconfig-paths/register"
    }
  }
}
